$hyoo_life_map $mol_plot_pane
	gap_hor 0
	gap_vert 0
	-
	zoom?val 16
	scale $mol_vector_2d /
		<= zoom
		<= zoom
	-
	style *
		^
		backgroundSize <= grid_size \
		backgroundPosition <= grid_pos \
	-
	graphs /
		<= Points $mol_plot_dot
			diameter <= zoom
			series_x <= points_x /number
			series_y <= points_y /number
	-
	-
	snapshot \
	snapshot_current \
	-
	speed 0
	population 0
	-
