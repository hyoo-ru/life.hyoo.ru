$mol_app_life_map $mol_view
	snapshot \
	snapshot_current \
	speed 0
	population 0
	event *
		^
		mousedown?event <=> draw_start?event null
		mouseup?event <=> draw_end?event null
	sub /
		<= Pane $mol_app_life_pane
			points <= points /
			zoom?val <=> zoom?val 16
			pan?val <=> pan?val /
				0
				0
